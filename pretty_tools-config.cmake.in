# - Config file for the pretty_tools package
# It defines the following variables
# PRETTY_TOOLS_INCLUDE_DIRS       - include directory
# PRETTY_TOOLS_LIBS_DIRS       - directory containing libraries
# PRETTY_TOOLS_LIBS         - libraries to link against
# PRETTY_TOOLS_SRC        - source files
include(CMakeFindDependencyMacro)

# 如果想要获取Config阶段的变量，可以使用这个
set_and_check(PRETTY_TOOLS_INCLUDE_DIRS "@PRETTY_TOOLS_INC_DIRS@")
set_and_check(PRETTY_TOOLS_SRC "@CMAKE_INSTALL_PREFIX@/@PRETTY_TOOLS_SRC@")
set_and_check(PRETTY_TOOLS_LIBS_DIRS "@CMAKE_INSTALL_PREFIX@/lib")
set_and_check(PRETTY_TOOLS_LIBS "@EXPORT_TARGETS@")

